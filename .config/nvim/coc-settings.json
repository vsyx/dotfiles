{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        },
        "sql": {
            "command": "sql-language-server",
            "args": ["up", "--method", "stdio"],
            "filetypes": ["sql", "psql"]
        }

    },
    "snippets.priority": 200, 
    "coc.preferences.formatOnType": true,
    "suggest": {
        "enablePreview": true,
        "noselect": true,
        "floatEnable": true,
        "labelMaxLength": 100,
        "detailMaxLength": 50,
        "maxPreviewWidth": 200
    },
    "java": {
        "jdt.ls.vmargs": "-javaagent:/home/tixxy/Downloads/lombok.jar",
        "home": "/usr/lib/jvm/default",
        "format": {
            "enable": true,
            "onType.enabled": true,
            "comments.enabled": false,
            "settings": {
                "url": "/home/tixxy/.config/nvim/format/java.xml",
                "profile": "GoogleStyle"
            }
        },
        "completion.overwrite": false,
        "contentProvider.preferred": "fernflower",
        "errors.incompleteClasspath.severity": "ignore"
    },
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true
}
